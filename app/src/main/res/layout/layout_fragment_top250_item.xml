<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/id_imageview"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_imageview"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:text="肖申克的救赎"
        android:textColor="@color/mainColor"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/id_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_title"
        android:layout_toRightOf="@id/id_imageview"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/rating"
        android:text="9.6"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/id_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_rating"
        android:layout_toRightOf="@id/id_imageview"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="导演: 弗兰克·德拉邦特 "
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/id_casts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_director"
        android:layout_toRightOf="@id/id_imageview"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="主演: 蒂姆·罗宾斯 / 摩根·弗里"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/id_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_casts"
        android:layout_toRightOf="@id/id_imageview"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="类型: 犯罪 / 剧情 "
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/id_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_genres"
        android:layout_toRightOf="@id/id_imageview"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="年份: 1994"
        android:textSize="16sp"/>
    <View
        android:layout_width="match_parent"
        android:background="#2000"
        android:layout_height="1dp"></View>
</RelativeLayout>